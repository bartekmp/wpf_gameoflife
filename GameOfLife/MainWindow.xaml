<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Game of Life" Height="600" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <TextBox x:Name="CountBox" HorizontalAlignment="Left" Margin="10,10,10,10" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
                <Button x:Name="StartButton" Content="Start" Margin="10,10,10,10" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="StartButton_Click"/>
                <Button x:Name="StepButton" Content="Step" Margin="10,10,10,10" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="StepButton_Click" />
                <Button x:Name="ResetButton" Content="Reset" Width="75" Margin="10,10,10,10" Click="ResetButton_Click"/>
                <Label Content="Iterations:" Margin="10,10,2,10"/>
                <Label x:Name="IterationsLabel" Content="{Binding StepCounter}" Margin="2,10,10,10"/>
            </StackPanel>
            <Grid DockPanel.Dock="Bottom" x:Name="MainGrid" Margin="10,10,10,10" />
        </DockPanel>
    </Grid>
</Window>
